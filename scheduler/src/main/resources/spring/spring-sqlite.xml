<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true"
>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.sqlite.JDBC"/>
        <property name="url" value="jdbc:sqlite:data/spider.store.db"/>
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="component-service" class="com.bh.spider.scheduler.persist.sqlite.SQLiteModuleService">
        <constructor-arg name="template" ref="jdbcTemplate"/>
    </bean>
    <bean id="request-service" class="com.bh.spider.scheduler.persist.sqlite.SQLiteRequestService">
        <constructor-arg name="template" ref="jdbcTemplate"/>
    </bean>

    <bean id="store" class="com.bh.spider.scheduler.persist.sqlite.SQLiteStore">
        <property name="moduleService" ref="component-service"/>
        <property name="requestService" ref="request-service"/>
    </bean>
</beans>